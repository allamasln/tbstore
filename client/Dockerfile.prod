# Step 1: build-stage
FROM node:16.15.0-alpine3.15 AS build-stage
WORKDIR /app 
COPY package*.json ./ 
RUN npm install 
COPY . .
RUN npm run build

# Step 2: Production
FROM nginx:1.22.0-alpine
RUN addgroup app && adduser -S -G app app
USER app
COPY --from=build-stage /app/build /usr/share/nginx/html
EXPOSE 80
ENTRYPOINT ["nginx", "-g", "daemon off;"]